<?import javafx.scene.text.Text?>

<BorderPane id="pane" prefHeight="296.0" prefWidth="526.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.LoginController">
   <top>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Concord" textAlignment="CENTER" wrappingWidth="58.064453125" BorderPane.alignment="CENTER">
         <font>
            <Font size="15.0" />
         </font></Text>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="529.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="73.0" prefWidth="529.0">
               <children>
                  <Label text="Username" />
                  <TextField id="username_TF" fx:id="usernameTextBox" alignment="CENTER" prefHeight="25.0" prefWidth="153.0" promptText="e.g. BadBoyZuochen123" />
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="59.0" prefWidth="529.0">
               <children>
                  <Label text="Password" />
                  <PasswordField id="pass_TF" fx:id="passwordPasswordField" promptText="passwordField" />
               </children>
            </HBox>
            <Button id="loginButton" fx:id="loginButton" mnemonicParsing="false" onAction="#onClickLogin" text="Login" />
            <HBox alignment="CENTER" prefHeight="46.0" prefWidth="529.0">
               <children>
                  <Label text="Don't have an account?" />
                  <Button fx:id="registerButton" mnemonicParsing="false" onAction="#onClickRegister" text="Register" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
